extends layout

block content
  .content(ng-controller="OscilloscopeController")
    .screen(cu-osc, ng-controller="ScreenController")
    nav(ng-controller="ChannelSettingsController")
      ul.nav.pull-right
        li(ng-repeat="channel in oscilloscope.channels")
          div(style="color: {{channel.color}}")
            .name {{channel.name}}
            input(type="number", min="0.1", step="0.1", ng-model="channel.freq")
            input(type="number", min="0.1", step="0.1", ng-model="channel.amplitude")
            input(type="number", step="0.1", ng-model="channel.yOffset")